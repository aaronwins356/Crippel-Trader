# Croc-Bot Trading System - Environment Configuration
# Copy this file to .env and configure your settings

# ============================================================================
# TRADING MODE AND SAFETY
# ============================================================================

# Trading mode: "paper" (default, safe) or "real" (live trading with real money)
CRIPPEL_TRADING_MODE=paper

# Real trading flag: 0 (paper trading) or 1 (live trading)
# MUST be set to 1 along with trading_mode=real for live trading
CRIPPEL_REAL_TRADING=0

# ============================================================================
# KRAKEN API CREDENTIALS
# ============================================================================

# Required for live trading, also used for real market data in paper trading
# Get your API keys from: https://www.kraken.com/u/security/api
CRIPPEL_KRAKEN_API_KEY=your_kraken_api_key_here
CRIPPEL_KRAKEN_API_SECRET=your_kraken_api_secret_here

# ============================================================================
# CAPITAL AND RISK MANAGEMENT
# ============================================================================

# Initial trading capital (USD)
CRIPPEL_INITIAL_CAPITAL=200.0

# Maximum capital limit (USD)
CRIPPEL_MAX_CAPITAL=5000.0

# Default aggression level (1-10)
CRIPPEL_DEFAULT_AGGRESSION=3

# ============================================================================
# DISCORD NOTIFICATIONS
# ============================================================================

CRIPPEL_DISCORD_NOTIFICATIONS_ENABLED=true
CRIPPEL_DISCORD_WEBHOOK_URL=your_discord_webhook_here

# ============================================================================
# AI STRATEGY GENERATION (Optional)
# ============================================================================

CRIPPEL_AI_STRATEGY_GENERATION_ENABLED=false
CRIPPEL_OPENAI_API_KEY=your_openai_api_key_here
